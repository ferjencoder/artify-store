{{!--views/home.handlebars--}}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
</head>
<body>
    <div class="container">
        <h1 class="text-center mt-4">Bienvenido a Artify</h1>
        <p class="text-center">Explora nuestra colección de arte digital y pósters.</p>

        <h2 class="mt-5">Lista de Productos</h2>
        <div class="row">
            {{#each products}}
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="{{#if this.thumbnails.[0]}}{{this.thumbnails.[0]}}{{else}}/path/to/default-image.jpg{{/if}}" class="card-img-top" alt="{{this.title}}">
                    <div class="card-body">
                        <h5 class="card-title">{{this.title}}</h5>
                        <p class="card-text">{{this.shortDescription}}</p>
                        <p class="card-text"><strong>${{this.price}}</strong></p>
                        <a href="/products/{{this._id}}" class="btn btn-primary">Ver Detalles</a>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>

        {{!-- Paginación --}}
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                {{#if hasPrevPage}}
                <li class="page-item">
                    <a class="page-link" href="?page={{prevPage}}&limit=6">Anterior</a>
                </li>
                {{else}}
                <li class="page-item disabled">
                    <a class="page-link" href="#">Anterior</a>
                </li>
                {{/if}}

                {{#each paginationNumbers}}
                <li class="page-item {{#if this.active}}active{{/if}}">
                    <a class="page-link" href="?page={{this.page}}&limit=6">{{this.page}}</a>
                </li>
                {{/each}}

                {{#if hasNextPage}}
                <li class="page-item">
                    <a class="page-link" href="?page={{nextPage}}&limit=6">Siguiente</a>
                </li>
                {{else}}
                <li class="page-item disabled">
                    <a class="page-link" href="#">Siguiente</a>
                </li>
                {{/if}}
            </ul>
        </nav>
    </div>
</body>
</html>

