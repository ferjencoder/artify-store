{{!--views/products.handlebars--}}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todos los Productos</title>
</head>
<body>
    <div class="container">
        <h1 class="text-center mt-4">Todos los Productos</h1>

        <div class="row">
            {{#if products.docs}}
                {{#each products.docs}}
                <div class="col-md-4 mb-4">
                    <div class="card">
                        <img src="{{this.thumbnails.[0]}}" class="card-img-top" alt="{{this.title}}" onerror="this.src='/path/to/default-image.jpg'">
                        <div class="card-body">
                            <h5 class="card-title">{{this.title}}</h5>
                            <p class="card-text">{{this.shortDescription}}</p>
                            <p class="card-text"><strong>${{this.price}}</strong></p>
                            <a href="/products/{{this._id}}" class="btn btn-primary">Ver Detalles</a>
                        </div>
                    </div>
                </div>
                {{/each}}
            {{else}}
                <p class="text-center">No se encontraron productos</p>
            {{/if}}
        </div>

        {{!-- Paginaci√≥n --}}
        {{#if products.totalPages}}
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                {{#if products.hasPrevPage}}
                <li class="page-item">
                    <a class="page-link" href="?page={{products.prevPage}}&limit={{products.limit}}&sort={{products.sort}}">Anterior</a>
                </li>
                {{else}}
                <li class="page-item disabled">
                    <a class="page-link" href="#">Anterior</a>
                </li>
                {{/if}}

                {{#each paginationNumbers}}
                <li class="page-item {{#if this.active}}active{{/if}}">
                    <a class="page-link" href="?page={{this.page}}&limit={{products.limit}}&sort={{products.sort}}">{{this.page}}</a>
                </li>
                {{/each}}

                {{#if products.hasNextPage}}
                <li class="page-item">
                    <a class="page-link" href="?page={{products.nextPage}}&limit={{products.limit}}&sort={{products.sort}}">Siguiente</a>
                </li>
                {{else}}
                <li class="page-item disabled">
                    <a class="page-link" href="#">Siguiente</a>
                </li>
                {{/if}}
            </ul>
        </nav>
        {{/if}}
    </div>
</body>
</html>
